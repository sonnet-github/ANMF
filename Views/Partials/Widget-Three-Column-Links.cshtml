@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web.Models

@{

    var bgcolour = "bg--" + Model.Value<string>("backgroundColour").ToString() ?? "";
	var heading = Model.Value<string>("tclHeader").ToString() ?? "";
	var title = Model.Value<string>("tcl_c1_Title").ToString() ?? "";
    var imgURL = Model.Value<IPublishedContent>("tcl_c1_Image")?.Url ?? "";
    var linkURL = Model.Value<Link>("tcl_c1_Link")?.Url ?? "";
    var linkName = Model.Value<Link>("tcl_c1_Link")?.Name ?? "";
	var title2 = Model.Value<string>("tcl_c2_Title").ToString() ?? "";
    var imgURL2 = Model.Value<IPublishedContent>("tcl_c2_Image")?.Url ?? "";
    var linkURL2 = Model.Value<Link>("tcl_c2_Link")?.Url ?? "";
    var linkName2 = Model.Value<Link>("tcl_c2_Link")?.Name ?? "";
	var title3 = Model.Value<string>("tcl_c3_Title").ToString() ?? "";
    var imgURL3 = Model.Value<IPublishedContent>("tcl_c3_Image")?.Url ?? "";
    var linkURL3 = Model.Value<Link>("tcl_c3_Link")?.Url ?? "";
    var linkName3 = Model.Value<Link>("tcl_c3_Link")?.Name ?? "";
    

}
<section id="more-anmf" class="uk-position-relative @bgcolour">
    <div class="uk-container">
        <h2 class="primary--heading f--bold uk-margin-remove-top">@heading</h2>
        <div class="uk-flex-start uk-grid" uk-grid="">
            <div class="uk-width-1-1 uk-width-1-3@m uk-first-column">
                <div class="anmf-org__content">
                    <figure>
                        <img src="@imgURL" alt="@title" class="uk-width-1-1">
                    </figure>
                    <div class="anmf-org__content-details">
                        <h2 class="font--helvetica f--20 uk-margin-remove">@title</h2>
                        <a href="@linkURL" class="primary--cta_text">@linkName</a>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-1 uk-width-1-3@m uk-first-column">
                <div class="anmf-org__content">
                    <figure>
                        <img src="@imgURL2" alt="@title2" class="uk-width-1-1">
                    </figure>
                    <div class="anmf-org__content-details">
                        <h2 class="font--helvetica f--20 uk-margin-remove">@title2</h2>
                        <a href="@linkURL2" class="primary--cta_text">@linkName2</a>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-1 uk-width-1-3@m uk-first-column">
                <div class="anmf-org__content">
                    <figure>
                        <img src="@imgURL3" alt="@title3" class="uk-width-1-1">
                    </figure>
                    <div class="anmf-org__content-details">
                        <h2 class="font--helvetica f--20 uk-margin-remove">@title3</h2>
                        <a href="@linkURL3" class="primary--cta_text">@linkName3</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>