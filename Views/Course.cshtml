@using Umbraco.Web.Models;
@using Umbraco.Web.PublishedModels;

@using ContentModels = Umbraco.Web.PublishedModels;

@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Course>

@{
	Layout = "MasterPage.cshtml";
	
	string courseName = Model.Value<string>("courseName");
	string courseLogo = Model.Value<IPublishedContent>("courseLogo")?.Url ?? "";
	string courseImage = Model.Value<IPublishedContent>("courseImage")?.Url ?? "";
	string courseSummary = Model.Value<string>("courseSummary");
	string courseDescription = Model.Value<string>("courseDescription");
	Link courseLink = Model.Value<Link>("courseLink");
	
	string courseLinkURL = "javascript:;";
                                            
    if (courseLink != null)
    {
        courseLinkURL = !string.IsNullOrEmpty(courseLink.Url) ? courseLink.Url : "javascript:;";
    }
}
<main class="page-wrapper thank-you">
    <section id="hero" class="uk-position-relative bg--white">
        <picture>
            <source media="(max-width: 959px)" srcset="@courseImage">
            <img src="@courseImage" alt="@courseName" class="uk-width-1-1">
        </picture>
    </section>
    <!-- BANNER BOX -->
    <section id="banner-box">
        <div class="uk-container">
            <div class="banner-box__holder">
                <h2 class="banner-box__heading uk-position-relative uk-margin-remove">@courseName</h2>
                <p><img src="@courseLogo" /></p>
                @Html.Raw(courseDescription)
                <a href="@courseLinkURL" class="secondary--cta">Register</a>
            </div>
        </div>
    </section>
</main>

